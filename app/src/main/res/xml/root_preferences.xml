<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/settings_theme_header">

        <SwitchPreferenceCompat
            app:key="dark_theme"
            app:title="@string/settings_enable_dark_theme" />

        <SwitchPreferenceCompat
            app:dependency="dark_theme"
            app:key="attachment"
            app:summaryOff="@string/attachment_summary_off"
            app:summaryOn="@string/attachment_summary_on"
            app:title="@string/settings_auto_dark_theme" />


    </PreferenceCategory>

    <PreferenceCategory app:title="@string/settings_consumption_header">

        <ListPreference
            android:id="@+id/settings_unit_selector"
            android:defaultValue="true"
            android:entries="@array/cons_unit_entries"
            android:entryValues="@array/cons_unit_values"
            android:key="unit"
            android:title="@string/settings_units_title" />


    </PreferenceCategory>

</PreferenceScreen>
