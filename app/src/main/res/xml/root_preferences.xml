<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="language"
        app:title="Language">

        <SwitchPreferenceCompat
            app:key="enable_language"
            app:title="Override system language"/>

        <ListPreference
            app:entries="@array/languages_entries"
            app:entryValues="@array/languages_values"
            app:key="language_select"
            app:title="Select language"
            app:dependency="enable_language"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="unit"
        app:title="Units">

        <DropDownPreference
            app:key="selected_unit"
            app:title="Select consumption unit"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="about"
        app:title="About">

        <Preference
            app:key="version"
            app:title="Build version"
            app:summary="1.0 beta 1"/>

    </PreferenceCategory>

</PreferenceScreen>
