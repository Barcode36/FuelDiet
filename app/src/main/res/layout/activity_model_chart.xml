<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ModelChartActivity">

    <com.anychart.AnyChartView
        android:id="@+id/vehicle_chart_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vehicle_chart_from_date">

    </com.anychart.AnyChartView>

    <Spinner
        android:id="@+id/vehicle_chart_spinner_type"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/vehicle_chart_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/vehicle_chart_from_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="From Date"
        android:focusable="false"
        android:inputType="date"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/vehicle_chart_to_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vehicle_chart_spinner_type" />

    <EditText
        android:id="@+id/vehicle_chart_to_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:hint="To Date"
        android:inputType="date"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/vehicle_chart_select_types"
        app:layout_constraintStart_toEndOf="@+id/vehicle_chart_from_date"
        app:layout_constraintTop_toBottomOf="@+id/vehicle_chart_spinner_type" />

    <Button
        android:id="@+id/vehicle_chart_select_types"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Types"
        app:layout_constraintBottom_toBottomOf="@+id/vehicle_chart_to_date"
        app:layout_constraintEnd_toStartOf="@+id/vehicle_chart_show"
        app:layout_constraintTop_toTopOf="@+id/vehicle_chart_to_date" />

    <Button
        android:id="@+id/vehicle_chart_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOW"
        app:layout_constraintBottom_toBottomOf="@+id/vehicle_chart_select_types"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vehicle_chart_select_types" />

</androidx.constraintlayout.widget.ConstraintLayout>

