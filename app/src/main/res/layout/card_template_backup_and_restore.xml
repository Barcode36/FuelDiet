<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingBottom="5dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_restore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-5dp"
            android:layout_marginEnd="15dp"
            android:padding="0dp"
            android:backgroundTint="@color/colorAccent"
            android:scaleX="0.75"
            android:scaleY="0.75"
            android:text="@string/backup_button_restore" />

        <TextView
            android:id="@+id/file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/file_date"
            android:layout_alignStart="@+id/file_icon"
            android:layout_marginTop="8dp"
            android:maxLines="2" />

        <ImageView
            android:id="@+id/file_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/ic_insert_drive_file_black_24dp"
            app:tint="@color/blu"
            android:contentDescription="@string/document_icon" />

        <TextView
            android:id="@+id/file_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/file_icon"
            android:layout_alignBottom="@+id/file_icon"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/file_icon"
            android:gravity="center" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>