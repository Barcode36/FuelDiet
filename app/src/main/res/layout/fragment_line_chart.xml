<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/vehicle_chart_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vehicle_chart_to_date" />


    <EditText
        android:id="@+id/vehicle_chart_from_date"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:hint="From Date"
        android:inputType="date"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/vehicle_chart_to_date"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:hint="To Date"
        android:inputType="date"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/vehicle_chart_from_date"
        app:layout_constraintEnd_toStartOf="@+id/vehicle_chart_show"
        app:layout_constraintStart_toEndOf="@+id/vehicle_chart_from_date"
        app:layout_constraintTop_toTopOf="@+id/vehicle_chart_from_date" />

    <Button
        android:id="@+id/vehicle_chart_show"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="SHOW"
        android:textColor="@color/titleTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>