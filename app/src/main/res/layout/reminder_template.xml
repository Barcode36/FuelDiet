<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp">

        <TextView
            android:id="@+id/reminder_title_template"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="15dp"
            android:text="Title"
            android:textColor="@color/primaryTextColor"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/reminder_km_template"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/reminder_title_template"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:text="63124km"
            android:textColor="@color/primaryTextColor"
            android:textSize="19sp" />

        <View
            android:id="@+id/reminder_break_template"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/reminder_title_template"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@color/secondaryTextColor" />

        <TextView
            android:id="@+id/reminder_desc_template"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reminder_break_template"
            android:layout_alignStart="@+id/reminder_title_template"
            android:layout_marginRight="15dp"
            android:layout_toStartOf="@+id/reminder_edit_img"
            android:text="Description"
            android:textSize="16sp"
            tools:singleLine="false" />

        <ImageView
            android:id="@+id/reminder_edit_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reminder_break_template"
            android:layout_alignEnd="@+id/reminder_km_template"
            android:tint="@color/primaryTextColor"
            app:srcCompat="@drawable/ic_edit_24px" />

        <ImageView
            android:id="@+id/reminder_remove_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reminder_edit_img"
            android:layout_alignEnd="@+id/reminder_edit_img"
            android:layout_marginTop="10dp"
            android:tint="@color/primaryTextColor"
            app:srcCompat="@drawable/ic_delete_24px" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>