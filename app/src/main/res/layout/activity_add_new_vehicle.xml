<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_vehicle_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:background="?attr/colorBg"
    tools:context=".Activity.AddNewVehicleActivity">

    <TextView
        android:id="@+id/add_vehicle_label_for_hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_vehicle_horse_power_value"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/add_vehicle_hp_input"
        app:layout_constraintEnd_toEndOf="@+id/add_vehicle_label_for_transmission"
        app:layout_constraintStart_toStartOf="@+id/add_vehicle_label_for_transmission" />

    <EditText
        android:id="@+id/add_vehicle_hp_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/add_vehicle_horse_power"
        android:importantForAutofill="no"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/edit_vehicle_save"
        app:layout_constraintEnd_toEndOf="@+id/add_vehicle_transmission_input"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/add_vehicle_transmission_input"
        app:layout_constraintTop_toBottomOf="@+id/add_vehicle_transmission_input" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/edit_vehicle_save"
        android:layout_width="56dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:tint="@android:color/white"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_save_24px" />

    <TextView
        android:id="@+id/add_vehicle_label_for_make"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_vehicle_make"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/add_vehicle_make_autocomplete"
        app:layout_constraintEnd_toStartOf="@+id/add_vehicle_make_autocomplete"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/add_vehicle_model_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/add_vehicle_model_value"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/add_vehicle_fuel_spinner"
        app:layout_constraintEnd_toEndOf="@+id/add_vehicle_make_autocomplete"
        app:layout_constraintStart_toStartOf="@+id/add_vehicle_make_autocomplete"
        app:layout_constraintTop_toBottomOf="@+id/add_vehicle_make_autocomplete" />

    <Spinner
        android:id="@+id/add_vehicle_fuel_spinner"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:ems="10"
        android:importantForAutofill="no"
        app:layout_constraintBottom_toTopOf="@+id/add_vehicle_engine_input"
        app:layout_constraintEnd_toEndOf="@+id/add_vehicle_model_input"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/add_vehicle_model_input"
        app:layout_constraintTop_toBottomOf="@+id/add_vehicle_model_input" />

    <EditText
        android:id="@+id/add_vehicle_engine_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/add_vehicle_engine_value"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/add_vehicle_transmission_input"
        app:layout_constraintEnd_toEndOf="@+id/add_vehicle_fuel_spinner"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/add_vehicle_fuel_spinner"
        app:layout_constraintTop_toBottomOf="@+id/add_vehicle_fuel_spinner" />

    <EditText
        android:id="@+id/add_vehicle_transmission_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/add_vehicle_transmission_value"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/add_vehicle_hp_input"
        app:layout_constraintEnd_toEndOf="@+id/add_vehicle_engine_input"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/add_vehicle_engine_input"
        app:layout_constraintTop_toBottomOf="@+id/add_vehicle_engine_input" />

    <TextView
        android:id="@+id/add_vehicle_label_for_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_vehicle_model"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/add_vehicle_model_input"
        app:layout_constraintEnd_toEndOf="@+id/add_vehicle_label_for_make"
        app:layout_constraintStart_toStartOf="@+id/add_vehicle_label_for_make" />

    <TextView
        android:id="@+id/add_vehicle_label_for_fuel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_vehicle_fuel"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/add_vehicle_fuel_spinner"
        app:layout_constraintEnd_toEndOf="@+id/add_vehicle_label_for_model"
        app:layout_constraintStart_toStartOf="@+id/add_vehicle_label_for_model"
        app:layout_constraintTop_toTopOf="@+id/add_vehicle_fuel_spinner" />

    <TextView
        android:id="@+id/add_vehicle_label_for_engine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_vehicle_engine"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/add_vehicle_engine_input"
        app:layout_constraintEnd_toEndOf="@+id/add_vehicle_label_for_fuel"
        app:layout_constraintStart_toStartOf="@+id/add_vehicle_label_for_fuel" />

    <TextView
        android:id="@+id/add_vehicle_label_for_transmission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_vehicle_transmission"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/add_vehicle_transmission_input"
        app:layout_constraintEnd_toEndOf="@+id/add_vehicle_label_for_engine"
        app:layout_constraintStart_toStartOf="@+id/add_vehicle_label_for_engine" />

    <AutoCompleteTextView
        android:id="@+id/add_vehicle_make_autocomplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/add_vehicle_make_value"
        app:layout_constraintBottom_toTopOf="@+id/add_vehicle_model_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/add_vehicle_label_for_make"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>