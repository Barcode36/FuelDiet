<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/add_petrol_station_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Petrol station name" />

    <ImageView
        android:id="@+id/add_petrol_station_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_petrol_station_name"/>

    <Button
        android:id="@+id/add_petrol_station_add_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_petrol_station_logo"
        android:layout_alignStart="@+id/add_petrol_station_name"
        android:layout_alignEnd="@+id/add_petrol_station_name"
        android:backgroundTint="@color/colorAccent"
        android:text="Select a logo"
        android:textColor="@color/titleTextColor" />

</RelativeLayout>