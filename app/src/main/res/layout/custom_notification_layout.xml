<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/notification_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        style="@style/TextAppearance.Compat.Notification.Title" />

    <TextView
        android:id="@+id/notification_text_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notification_text_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        style="@style/TextAppearance.Compat.Notification.Title"/>

    <TextView
        android:id="@+id/notification_text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notification_text_subtitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        style="@style/TextAppearance.Compat.Notification"/>

    <ImageView
        android:id="@+id/notification_image_logo_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/notification_text_title"
        android:scaleType="centerInside"
        android:contentDescription="@string/car_logo" />

</RelativeLayout>